<% provide(:title, 'Surveys List') %>
<div class="panel-heading-controls pull-right">
  <a href="/survey/add_survey" class="btn btn-primary btn-lg">Add Survey</a>
</div>
<div class="col-xs-12 ">
  <h4 class="m-t-0 m-b-2 font-weight-semibold text-muted">Survey List</h4>
  <table class="table table-striped table-bordered" id="sortable-3">
    <tbody>
    <% if !@surveys.nil? && !@surveys.blank? %>
        <% @surveys.each do |survey| %>
            <tr>
              <td>
                <div class="widget-notifications-item">
                  <div class="widget-notifications-title text-danger"><%= survey.survey_title %></div>
                  <div class="widget-notifications-description"><%= survey.survey_description %></div>
                  <% if survey.user_id == current_user.id %>
                    <div class="panel-heading-controls pull-right">
                      <%= link_to 'Edit',url_for(action: :show,id: survey.id) %> |
                      <%= link_to 'Delete',url_for(action: :delete,id: survey.id),method: :delete, data: {confirm: "Are you sure?"} %>

                    </div>
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
    <% else %>
        <tr>
          <td>
            <h3 class="text-center m-a-0">There are no surveys</h3>
            <div class="text-center" >To create new survey clock on <a href="/survey/add_survey">add survey</a>.</div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
