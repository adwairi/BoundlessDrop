<div class="panel-heading-controls pull-right">
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-default">
    Create Survey
  </button>
</div>
<div class="col-xs-12 ">
  <h4 class="m-t-0 m-b-2 font-weight-semibold text-muted">Survey List</h4>
  <table class="table table-striped table-bordered" id="sortable-3">
    <tbody>
    <% if !@surveys.nil? %>
        <% @surveys.each do |survey| %>
        <tr>
          <td>
            <div class="widget-notifications-item">
              <div class="widget-notifications-title text-danger"><%= survey.survey_title %></div>
              <div class="widget-notifications-description"><%= survey.survey_description %></div>
            </div>
          </td>
        </tr>
        <% end %>
    <% else %>
      <tr>
        <td>
          <h3 class="text-center m-a-0">There are no surveys</h3>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>