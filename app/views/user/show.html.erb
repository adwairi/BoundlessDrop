<% provide(:title, @user.first_name) %>
<div class="center jumbotron">
  <div class="row">
    <!--<div class=" pull-right margin-top-30"><%= button_to "Edit", "user/edit/"+@user.id.to_s, :method => "get" %></div>-->
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= @user.first_name.to_s + ' ' + @user.last_name.to_s %>
        </h1>
        <ul>
          <li><b>First name:</b> <%= @user.first_name %> </li>
          <li><b>Last name:</b> <%= @user.last_name %></li>
          <li><b>Email:</b> <%= @user.email %> </li>
          <li><b>Username:</b> <%= @user.username %> </li>
        </ul>
      </section>
    </aside>
  </div>
</div>