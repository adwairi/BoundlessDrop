<% provide(:title, @user.first_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.first_name + ' ' + @user.last_name %>
      </h1>
      <ul>
        <li><b>First name:</b> <%= @user.first_name %> </li>
        <li><b>Last name:</b> <%= @user.last_name %></li>
        <li><b>Email:</b> <%= @user.email %> </li>
      </ul>
    </section>
  </aside>
</div>